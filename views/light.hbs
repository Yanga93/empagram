<h1>light switch</h1>

{{#if messages.info}}
<div class="message">
    {{messages.info}}
</div>
{{/if}}

<div class="row">
    <div class="two columns">

        <div class="light off {{lightStatus}}">
        </div>
    </div>
    <div class="two columns">
        <form method="post" action="/light">
            {{#if blink}}
            <script type="text/javascript">
                //alert("Blink!")

                var light = document.querySelector(".light");
                setInterval(function(){
                    light.classList.toggle('on');
                }, 1000);

            </script>
            {{/if}}

            <div class="row">
                <div class="six columns">
                    On
                </div>
                <div class="six columns">
                    <input type="radio" name="status" value="on">
                </div>
            </div>
            <div class="row">
                <div class="six columns">
                    Off
                </div>
                <div class="six columns">
                    <input type="radio" name="status" value="off">
                </div>
            </div>
            <div class="row">
                <div class="six columns">
                    Blink
                </div>
                <div class="six columns">
                    <input type="radio" name="status" value="blink">
                </div>
            </div>

            <div class="">
                <input class="button-primary" type="submit" value="Light switch">
            </div>
        </form>
    </div>
</div>
